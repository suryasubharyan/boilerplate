		"jsonwebtoken": "^9.0.1",
		"lodash": "^4.17.21",
		"module-alias": "^2.2.3",
		"moment": "^2.29.4",
		"mongoose": "^8.4.0",
		"morgan": "^1.10.0",
		"multer": "^1.4.5-lts.1",
		"mustache": "^4.2.0",
		"phone": "^3.1.50",
		"socket.io": "^4.7.5",
		"socket.io-client": "^4.8.1",
		"winston": "^3.10.0"
	},
	"devDependencies": {
		"@types/bcrypt": "^5.0.0",
		"@types/cors": "^2.8.13",
		"@types/ejs": "^3.1.2",
