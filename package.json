		"@typescript-eslint/parser": "^6.2.0",
		"eslint": "^8.45.0",
		"rimraf": "^5.0.1",
		"ts-node-dev": "^2.0.0",
		"tsconfig-paths": "^4.2.0",
		"typescript": "^5.1.6"
	},
	"_moduleAliases": {
		"@modules": "build/modules",
		"@models": "build/models",
		"@config": "build/core/config",
		"@core": "build/core",
		"@middlewares": "build/middlewares",
		"@helpers": "build/helpers",
