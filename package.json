	"bugs": {
		"url": "https://github.com/SoluLab/backend-boilerplate/issues"
	},
	"homepage": "https://github.com/SoluLab/backend-boilerplate#readme",
	"dependencies": {
		"@aws-sdk/client-s3": "^3.650.0",
		"@aws-sdk/client-ses": "^3.649.0",
		"@aws-sdk/client-sns": "^3.649.0",
		"axios": "^1.7.7",
		"bcrypt": "^5.1.0",
		"cors": "^2.8.5",
		"cp": "^0.2.0",
		"cross-env": "^7.0.3",
		"crypto-js": "^4.1.1",
		"dayjs": "^1.11.13",
		"dotenv": "^16.3.1",
		"express": "^4.18.2",
		"express-rate-limit": "^7.4.0",
