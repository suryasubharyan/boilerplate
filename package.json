{
	"name": "backend-boilerplate",
	"version": "1.0.0",
	"description": "",
	"main": "./build/server.js",
	"scripts": {
		"postinstall": "npm run prepare",
		"prepare": "husky install",
		"start": "npm run build:clean && cross-env node --no-warnings ./build/server.js",
		"dev": "ts-node-dev -r tsconfig-paths/register ./src/server.ts",
		"build": "npx tsc",
		"build:clean": "rimraf build && npx tsc",
		"lint": "eslint --fix . --ext .ts",
		"copy-env": "cp .env.sample .env"
	},
	"repository": {
		"type": "git",
		"url": "git+https://github.com/SoluLab/backend-boilerplate.git"
	},
	"author": "Adil Ansari",
